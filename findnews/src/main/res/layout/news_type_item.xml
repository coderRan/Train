<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/colorText"
        android:id="@+id/tv_grid_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/grid_item_bg"
        android:gravity="center"
        android:text="gridItem" />

    <ImageView
        android:id="@+id/iv_grid_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_grid_item"
        android:layout_alignTop="@id/tv_grid_item"
        android:src="@mipmap/closeicon_download_leftdrawer"
        android:visibility="gone" />
</RelativeLayout>
